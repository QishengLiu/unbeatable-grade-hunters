/* pages/setting/setting.wxss */
.settings-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: var(--bg-color);
  padding: 0;
}

/* Status bar */
.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 30rpx;
  height: 40rpx;
  background: transparent;
  font-size: 24rpx;
  color: var(--text-main);
}

.time {
  font-weight: bold;
  font-size: 28rpx;
}

.status-icons {
  display: flex;
  gap: 8rpx;
  font-size: 24rpx;
}

/* Profile header */
.profile-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 40rpx;
  background: var(--card-bg);
  border-bottom: 1rpx solid var(--border-color);
}

.avatar-container {
  position: relative;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  object-fit: cover;
  border: 1px solid var(--border-color);
}

.verification-badge {
  position: absolute;
  bottom: -4rpx;
  right: -4rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: var(--primary-color);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
}

.user-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.username {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-main);
}

.role {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.logout-section {
  padding: 40rpx;
  background: var(--bg-color);
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background: #ffffff;
  color: #ff3b30;
  font-size: 32rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #ff3b30;
}
.settings-list {
  flex: 1;
  background: var(--card-bg);
  margin-top: 20rpx;
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 40rpx;
  border-bottom: 1rpx solid var(--border-color);
  transition: background 0.3s ease;
}

.settings-item:active {
  background: var(--primary-light);
}

.item-label {
  font-size: 28rpx;
  color: var(--text-main);
  font-weight: 500;
}

.item-arrow-img {
  width: 28rpx;
  height: 28rpx;
}

/* Bottom navigation */
.bottom-nav {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 100rpx;
  background: var(--card-bg);
  border-top: 1rpx solid var(--border-color);
  padding-bottom: 20rpx;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx;
  flex: 1;
}

.nav-item.active {
  color: var(--primary-color);
}

.nav-icon-img {
  width: 48rpx;
  height: 48rpx;
}

.nav-label {
  font-size: 22rpx;
  color: var(--text-placeholder);
}

.nav-item.active .nav-label {
  color: var(--primary-color);
}

.network-config {
  background: var(--card-bg);
  margin: 20rpx 0;
  padding: 28rpx 40rpx;
  border-top: 1rpx solid var(--border-color);
}

.config-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.config-label {
  font-size: 28rpx;
  color: var(--text-main);
  flex-shrink: 0;
}

.baseurl-input {
  flex: 1;
  height: 80rpx;
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-md);
  padding: 0 24rpx;
  font-size: 28rpx;
  color: var(--text-main);
  background: var(--bg-color);
}

.save-btn {
  margin-top: 20rpx;
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
  border-radius: var(--radius-full);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
}
