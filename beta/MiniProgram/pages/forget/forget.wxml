<view class="forget-page">
  <view class="page-header">
    <text class="page-title">重置密码</text>
    <text class="page-desc">输入手机号验证身份</text>
  </view>

  <view class="card">
    <view class="field">
      <text class="field-label">手机号码</text>
      <input
        class="field-input"
        placeholder="请输入 11 位手机号"
        placeholder-class="placeholder"
        type="number"
        maxlength="11"
        value="{{phone}}"
        bindinput="bindPhoneInput"
      />
    </view>

    <view class="field">
      <text class="field-label">验证码</text>
      <view class="code-row">
        <input
          class="field-input code-input"
          placeholder="请输入短信验证码"
          placeholder-class="placeholder"
          type="number"
          maxlength="6"
          value="{{code}}"
          bindinput="bindCodeInput"
        />
        <button
          class="code-btn"
          size="mini"
          bindtap="sendCode"
          disabled="{{counting}}"
        >
          {{counting ? countdown + "s" : "获取验证码"}}
        </button>
      </view>
    </view>

    <button
      class="primary-btn"
      bindtap="handleLogin"
      loading="{{loading}}"
    >
      继续
    </button>

    <view class="helper-text">
      <text>记起密码了？</text>
      <text class="link" bindtap="backToAccountLogin">返回登录</text>
    </view>
  </view>
</view>