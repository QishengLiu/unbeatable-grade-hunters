page {
  background-color: #F5F7FA;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

/* Navbar */
.navbar {
  background: #fff;
  z-index: 100;
  box-shadow: 0 1rpx 0 rgba(0,0,0,0.05);
}

.nav-content {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.back-icon {
  width: 36rpx;
  height: 36rpx;
}

.page-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.submit-btn {
  font-size: 30rpx;
  color: #ccc;
  font-weight: 500;
}

.submit-btn.active {
  color: #4E9CF8;
}

/* Switcher */
.type-switcher {
  background: #fff;
  padding: 20rpx 32rpx;
}

.switcher-bg {
  background: #F5F5F5;
  border-radius: 16rpx;
  padding: 8rpx;
  display: flex;
}

.switch-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 12rpx;
  transition: all 0.2s;
}

.switch-item.active {
  background: #4E9CF8;
  color: #fff;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(78, 156, 248, 0.3);
}

/* Form */
.form-scroll {
  flex: 1;
  padding: 24rpx;
  /* padding-bottom: 140rpx; removed to avoid conflict with container padding */
  box-sizing: border-box; /* Ensure padding is included in width/height */
  overflow-y: auto; /* Ensure scrolling */
}

.form-container {
  background: #fff;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.02);
  padding-bottom: 200rpx; /* Add padding to bottom of content to clear fixed footer */
}

.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.form-label.required::after {
  content: '*';
  color: #FF5E57;
  margin-left: 4rpx;
}

.form-input {
  height: 88rpx;
  background: #F9F9F9;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  background: #F9F9F9;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.picker-view, .location-picker {
  height: 88rpx;
  background: #F9F9F9;
  border-radius: 16rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 36rpx;
}

.text-black {
  color: #333;
}

.text-gray {
  color: #999;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.4;
}

.safety-tip {
  font-size: 24rpx;
  color: #999;
  background: #FFF9E6;
  padding: 16rpx;
  border-radius: 12rpx;
  margin-bottom: 32rpx;
  text-align: center;
}

.latlng-text {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #666;
}

/* Image Upload */
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  width: 140rpx;
  height: 140rpx;
  position: relative;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.remove-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 36rpx;
  height: 36rpx;
  background: rgba(0,0,0,0.5);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.upload-btn {
  width: 140rpx;
  height: 140rpx;
  background: #F9F9F9;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #ddd;
}

.camera-icon {
  width: 50rpx;
  height: 50rpx;
}

/* Bottom Area */
.bottom-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.05);
}

.publish-btn {
  width: 100%;
  height: 96rpx;
  background: #E0E0E0;
  color: #fff;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.2s;
}

.publish-btn.active {
  background: linear-gradient(135deg, #4E9CF8 0%, #3578E5 100%);
  box-shadow: 0 8rpx 20rpx rgba(78, 156, 248, 0.3);
}
