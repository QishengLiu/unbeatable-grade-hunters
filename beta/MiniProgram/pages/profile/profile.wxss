/* Global Page Styles */
.profile-page {
  min-height: 100vh;
  background-color: #F3F6FA;
  padding-bottom: 180rpx; /* Space for bottom fixed actions */
  box-sizing: border-box;
}

/* 1. Hero Card */
.hero-card {
  margin: 24rpx 24rpx 0;
  background: linear-gradient(-45deg, #6A5AE0, #9BA8FF, #6A5AE0, #9BA8FF);
  background-size: 400% 400%;
  animation: fluidGradient 10s ease infinite;
  border-radius: 32rpx;
  padding: 40rpx 32rpx;
  color: #ffffff;
  box-shadow: 0 16rpx 40rpx rgba(106, 90, 224, 0.35);
  position: relative;
  overflow: hidden;
}

@keyframes fluidGradient {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

/* Subtle decoration circle */
.hero-card::after {
  content: '';
  position: absolute;
  top: -50rpx;
  right: -50rpx;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.hero-content {
  display: flex;
  align-items: center;
  gap: 30rpx;
  position: relative;
  z-index: 1;
}

.avatar-container {
  position: relative;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.9);
  background-color: #fff;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

.avatar-glow {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 50%;
  box-shadow: 0 0 30rpx rgba(255, 255, 255, 0.4);
  z-index: -1;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.username {
  font-size: 40rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
}

.role-tag {
  display: inline-flex;
  background: linear-gradient(90deg, rgba(255,255,255,0.2) 0%, rgba(255,255,255,0.4) 50%, rgba(255,255,255,0.2) 100%);
  background-size: 200% 100%;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  backdrop-filter: blur(4px);
  width: fit-content;
  animation: flow 3s infinite linear;
}

@keyframes flow {
  0% {
    background-position: 100% 0;
  }
  100% {
    background-position: -100% 0;
  }
}

.credit-badge {
  margin-top: 8rpx;
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  background: rgba(255, 255, 255, 0.95);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  width: fit-content;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.credit-icon {
  font-size: 24rpx;
}

.credit-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #6A5AE0; /* Matches primary color */
}

/* Credit Levels Colors (if needed for badge borders/text) */
.level-S .credit-text { color: #F59E0B; } /* Gold */
.level-A .credit-text { color: #6A5AE0; } /* Purple */

/* 2. Stats Grid */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 30rpx 24rpx;
}

.stat-card {
  background: #ffffff;
  border-radius: 28rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
  transition: transform 0.1s ease;
}

.stat-card:active {
  transform: scale(0.98);
}

.stat-icon-bg {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.stat-icon {
  width: 40rpx;
  height: 40rpx;
}

/* Icon Background Colors */
.bg-blue { background-color: #E3F2FD; }
.bg-purple { background-color: #F3E5F5; }
.bg-orange { background-color: #FFF3E0; }
.bg-green { background-color: #E8F5E9; }

.stat-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #94A3B8;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #1E293B;
}

/* 3. Personal Management Section */
.section-container {
  margin: 0 24rpx 30rpx;
  background: #ffffff;
  border-radius: 32rpx;
  padding: 10rpx 0;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.section-header {
  padding: 30rpx 32rpx 10rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1E293B;
}

.menu-list {
  display: flex;
  flex-direction: column;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx;
  position: relative;
}

.menu-item:not(:last-child)::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 100rpx; /* Indent separator */
  right: 32rpx;
  height: 1px;
  background-color: #F1F5F9;
}

.menu-item:active {
  background-color: #F8FAFC;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.menu-icon {
  width: 44rpx;
  height: 44rpx;
  opacity: 0.8;
}

.menu-text-group {
  display: flex;
  flex-direction: column;
}

.menu-label {
  font-size: 28rpx;
  color: #334155;
  font-weight: 500;
}

.menu-desc {
  font-size: 22rpx;
  color: #94A3B8;
  margin-top: 4rpx;
}

.menu-arrow {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.3;
}

/* 4. Bottom Actions */
.bottom-actions {
  position: fixed;
  bottom: 40rpx;
  left: 40rpx;
  right: 40rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border-radius: 100rpx;
  padding: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.5);
  z-index: 100;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 40rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #64748B;
  transition: all 0.2s ease;
}

.action-btn:active {
  background-color: #F1F5F9;
}

.action-btn.primary {
  background: linear-gradient(135deg, #6A5AE0 0%, #9BA8FF 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(106, 90, 224, 0.3);
  flex: 1.2; /* Make primary button slightly wider */
}

.action-btn.primary:active {
  transform: scale(0.96);
  box-shadow: 0 2rpx 6rpx rgba(106, 90, 224, 0.2);
}
