        <view class="avatar-glow"></view>
      </view>
      <view class="user-info">
        <text class="username">{{userInfo.username}}</text>
        <view class="role-tag">
          <text>校园互助 · 已认证</text>
        </view>
        <view class="credit-badge level-{{userInfo.creditLevel}}">
          <text class="credit-icon">⭐</text>
          <text class="credit-text">信誉分：{{userInfo.creditScore}}</text>
        </view>
      </view>
    </view>
  </view>

