  <!-- 3. 任务管理模块 -->
  <view class="section-container">
    <view class="section-header">
      <text class="section-title">任务管理</text>
    </view>
    <view class="menu-list">
      <block wx:for="{{taskManagementItems}}" wx:key="type">
        <view class="menu-item" bindtap="handleManagement" data-type="{{item.type}}">
          <view class="menu-left">
            <image class="menu-icon" src="{{item.icon}}" mode="aspectFit"></image>
            <view class="menu-text-group">
              <text class="menu-label">{{item.label}}</text>
            </view>
          </view>
          <image class="menu-arrow" src="/image/箭头.png" mode="aspectFit"></image>
        </view>
      </block>
    </view>
  </view>

  <!-- 4. 个人管理模块 -->
  <view class="section-container">
    <view class="section-header">
      <text class="section-title">个人管理</text>
    </view>
    <view class="menu-list">
      <block wx:for="{{shortcuts}}" wx:key="type">
        <view class="menu-item" bindtap="handleManagement" data-type="{{item.type}}">
          <view class="menu-left">
            <image class="menu-icon" src="{{item.icon}}" mode="aspectFit"></image>
            <view class="menu-text-group">
              <text class="menu-label">{{item.label}}</text>
              <text class="menu-desc" wx:if="{{item.desc}}">{{item.desc}}</text>
            </view>
          </view>
          <image class="menu-arrow" src="/image/箭头.png" mode="aspectFit"></image>
        </view>
      </block>
    </view>
  </view>

  <!-- 5. 底部操作区 -->
  <view class="bottom-actions">
    <view class="action-btn" bindtap="handleQuickAction" data-action="edit">
      <text>编辑资料</text>
    </view>
    <view class="action-btn" bindtap="handleQuickAction" data-action="help">
      <text>帮助中心</text>
    </view>
  </view>
</view>
