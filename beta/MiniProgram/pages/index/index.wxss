/* pages/index/index.wxss */
page {
  --primary-blue: #5B8CFF;
  --primary-purple: #6A5BFF;
  --bg-color: #F7F9FC;
  --text-main: #333333;
  --text-sub: #666666;
  --text-light: #999999;
  --card-bg: #FFFFFF;
  --radius-lg: 24px;
  --radius-md: 16px;
  --radius-sm: 12px;
  --shadow-soft: 0 8rpx 24rpx rgba(91, 140, 255, 0.08);
  --shadow-float: 0 12rpx 32rpx rgba(0, 0, 0, 0.08);
  
  background-color: var(--bg-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.home-container {
  min-height: 100vh;
  position: relative;
  padding-bottom: 0; /* Handled by spacer */
}

/* 1. Custom Top Navigation */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  padding-top: env(safe-area-inset-top); /* Adapt for status bar */
  padding-left: 32rpx;
  padding-right: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center; /* Centered */
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(10px);
  z-index: 1000;
  box-shadow: 0 1px 0 rgba(0,0,0,0.05);
}

/* Removed nav-left and nav-right styles */

.nav-center {
  text-align: center;
}

.app-name {
  font-size: 34rpx;
  font-weight: 700;
  background: linear-gradient(90deg, #333, #666);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  letter-spacing: 1px;
}

/* 2. Scrollable Content */
.main-scroll {
  height: 100vh;
  box-sizing: border-box;
}

.content-wrapper {
  padding: calc(88rpx + env(safe-area-inset-top) + 24rpx) 32rpx 180rpx; /* Top + Padding, Bottom for TabBar */
}

/* Banner Section */
.banner-section {
  margin-bottom: 40rpx;
}

.banner-card {
  position: relative;
  width: 100%;
  height: 380rpx; /* 16:9 approx */
  border-radius: var(--radius-md);
  overflow: hidden;
  box-shadow: var(--shadow-soft);
}

.banner-bg {
  width: 100%;
  height: 100%;
  display: block;
}

.banner-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.4) 100%);
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: flex-start;
}

.banner-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 8rpx;
  text-shadow: 0 2px 4px rgba(0,0,0,0.2);
}

.banner-subtitle {
  font-size: 26rpx;
  color: rgba(255,255,255,0.9);
  margin-bottom: 24rpx;
}

.banner-btn {
  padding: 10rpx 24rpx;
  background: rgba(255,255,255,0.2);
  backdrop-filter: blur(5px);
  border-radius: 200rpx;
  border: 1px solid rgba(255,255,255,0.4);
}

.banner-btn text {
  font-size: 24rpx;
  color: #fff;
  font-weight: 500;
}

/* Category Grid */
.category-section {
  margin-bottom: 48rpx;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.category-item {
  background: #fff;
  padding: 24rpx;
  border-radius: 20px;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
  transition: all 0.3s ease;
  border: 1px solid transparent; /* Prepare for border transition */
}

.category-item:active {
  transform: scale(0.98);
}

/* Active State */
.category-item.active {
  background: var(--primary-blue);
  box-shadow: 0 8rpx 20rpx rgba(91, 140, 255, 0.3);
  transform: translateY(-2rpx);
}

.category-item.active .cat-name {
  color: #ffffff;
}

.category-item.active .cat-icon-box {
  background: rgba(255, 255, 255, 0.2);
}

.category-item.active .cat-icon {
  filter: brightness(0) invert(1); /* Turn colored icon to white */
}

/* Unselected State - Lighter/Subtle */
.category-item:not(.active) {
  background: #FFFFFF;
  opacity: 0.9; /* Slight fade */
}

.cat-icon-box {
  width: 80rpx;
  height: 80rpx;
  background: #F0F4FF;
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.cat-icon {
  width: 44rpx;
  height: 44rpx;
  transition: all 0.3s ease;
}

.cat-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
  transition: all 0.3s ease;
}

/* Recommendation Flow */
.recommend-section {
  margin-bottom: 32rpx;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--text-main);
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(180deg, var(--primary-blue), var(--primary-purple));
  border-radius: 4rpx;
}

.card-flow {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.flow-card {
  background: #fff;
  border-radius: var(--radius-md);
  overflow: hidden;
  box-shadow: var(--shadow-soft);
  display: flex;
  flex-direction: column;
}

.card-cover-box {
  width: 100%;
  height: 340rpx; /* 16:9 approx relative to width */
}

.card-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.card-content {
  padding: 24rpx;
}

.card-title {
  font-size: 30rpx; /* 15px */
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card-desc {
  font-size: 26rpx; /* 13px */
  color: var(--text-sub);
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.5;
}

.card-footer {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.card-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

.action-num {
  font-size: 24rpx;
  color: var(--text-light);
}

.bottom-spacer {
  height: 100rpx; /* Extra space */
}

/* 3. Floating Bottom Navigation */
.floating-tab-bar {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  z-index: 1000;
}

.tab-glass {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border-radius: 40px; /* Round pill shape */
  padding: 16rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 10rpx 40rpx rgba(0,0,0,0.1);
  border: 1px solid rgba(255,255,255,0.5);
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  padding: 8rpx 16rpx;
  transition: all 0.3s ease;
}

.tab-icon-box {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tab-icon {
  width: 44rpx;
  height: 44rpx;
}

.tab-text {
  font-size: 20rpx;
  color: #999;
}

.tab-item.active .tab-text {
  color: var(--primary-blue);
  font-weight: 600;
}

.tab-item.special {
  margin-top: -30rpx; /* Pop out effect */
}

.tab-item.special .tab-icon-box {
  width: 88rpx;
  height: 88rpx;
  background: linear-gradient(135deg, var(--primary-blue), var(--primary-purple));
  border-radius: 50%;
  box-shadow: 0 8rpx 20rpx rgba(91, 140, 255, 0.4);
}

.tab-item.special .tab-icon {
  width: 40rpx;
  height: 40rpx;
  filter: brightness(100); /* Make white */
}