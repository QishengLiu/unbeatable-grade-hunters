/* pages/post_create/post_create.wxss */
page {
  --primary-color: #3578E5;
  --bg-color: #F7F9FC;
  --card-bg: #FFFFFF;
  --text-main: #333333;
  --text-sub: #999999;
  --border-color: #EEEEEE;
  
  background-color: var(--bg-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  overflow: hidden;
}

/* Navbar */
.navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  height: 88rpx; /* Standard navbar height */
  background-color: #fff;
  z-index: 100;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.navbar-left, .navbar-right {
  width: 80rpx;
  display: flex;
  align-items: center;
  height: 100%;
}

.nav-back-icon {
  width: 44rpx;
  height: 44rpx;
}

.navbar-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #000;
}

/* Scroll Content */
.scroll-container {
  flex: 1;
  box-sizing: border-box;
  overflow-y: scroll; /* Force scrolling enabled */
  -webkit-overflow-scrolling: touch; /* Smooth scrolling on iOS */
  height: calc(100vh - 88rpx - env(safe-area-inset-bottom)); /* Explicit height calculation */
}

.form-container {
  padding: 24rpx;
  padding-bottom: 300rpx; /* Extra space at bottom to ensure last elements are reachable */
  min-height: 100%; /* Ensure container fills scroll view */
}

/* AI Button (Clean Style) */
.ai-generate-section {
  margin-bottom: 24rpx;
  display: flex;
  justify-content: flex-end;
}

.ai-generate-btn {
  background: #F0F7FF;
  color: var(--primary-color);
  font-size: 30rpx; /* Increased from 26rpx */
  padding: 16rpx 30rpx; /* Slightly larger padding */
  border-radius: 34rpx;
  display: flex;
  align-items: center;
  justify-content: center; /* Center content */
  border: 1rpx solid rgba(53, 120, 229, 0.1);
  margin: 0;
  width: auto !important;
  font-weight: 500;
  line-height: 1; /* Reset line-height to center properly */
}

.ai-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.ai-text {
  color: var(--primary-color);
}

/* Form Sections */
.form-section {
  background: var(--card-bg);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
}

/* Inputs */
.title-input {
  font-size: 34rpx;
  font-weight: 600;
  color: #000;
  border-bottom: 1rpx solid var(--border-color);
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  height: auto;
}

.title-input-placeholder {
  color: #CCC;
}

.content-input {
  width: 100%;
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  min-height: 240rpx;
}

.content-input-placeholder {
  color: #999;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #CCC;
  margin-top: 10rpx;
}

/* Media Uploader */
.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

/* 与发布任务页统一的图片上传样式 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  width: 140rpx;
  height: 140rpx;
  position: relative;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.remove-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 36rpx;
  height: 36rpx;
  background: rgba(0,0,0,0.5);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.upload-btn {
  width: 140rpx;
  height: 140rpx;
  background: #F9F9F9;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #ddd;
}

.camera-icon {
  width: 50rpx;
  height: 50rpx;
}

/* Category & Tags */
.category-selector {
  align-self: flex-start;
  width: 70%;
  padding: 18rpx 24rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
  border: 1rpx solid #E5E5E5;
  display: flex;
  align-items: center;
}

.selected-category,
.placeholder {
  flex: 1;
  font-size: 26rpx;
}

.placeholder {
  color: #999;
}

.category-selector .arrow-icon {
  width: 28rpx;
  height: 28rpx;
  margin-left: 12rpx;
  opacity: 0.6;
}

.category-scroll {
  white-space: nowrap;
  margin-right: -30rpx; /* Negate padding */
  padding-right: 30rpx;
}

.category-item {
  display: inline-block;
  padding: 12rpx 32rpx;
  background: #F5F7FA;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  margin-right: 16rpx;
  border: 1rpx solid transparent;
  transition: all 0.2s;
}

.category-item.active {
  background: #EBF2FF;
  color: var(--primary-color);
  border-color: rgba(53, 120, 229, 0.2);
  font-weight: 500;
}

.tag-container {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.available-tag-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.tag-item {
  position: relative;
  background: #F0F7FF;
  color: var(--primary-color);
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.remove-tag {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: rgba(0,0,0,0.08);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  opacity: 0.7;
}

.tag-input-container {
  display: flex;
  gap: 16rpx;
  margin-top: 8rpx;
}

.tag-input {
  flex: 1;
  height: 72rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
}

.add-tag-btn {
  width: 120rpx !important;
  height: 72rpx;
  margin: 0 !important;
  padding: 0;
  background: #F0F0F0;
  color: #333;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
}

/* Anonymous */
.anonymous-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.anonymous-text {
  font-size: 30rpx;
  color: #333;
}

/* Bottom Actions */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.03);
  z-index: 99;
}

.submit-button {
  background: var(--primary-color);
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100% !important;
  font-weight: 600;
  letter-spacing: 2rpx;
  color: #fff;
}

.submit-button:active {
  opacity: 0.9;
}

/* Popup */
.popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.popup-content {
  width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 700;
}

.close-popup {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.ai-prompt-input {
  width: 100%;
  min-height: 240rpx; /* Increased height */
  height: 240rpx; /* Increased height */
  background: #F8F9FA;
  border-radius: 12rpx;
  padding: 10rpx; /* Add padding inside input */
  box-sizing: border-box; /* Ensure padding is included */
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  margin-bottom: 30rpx;
}

.generate-btn {
  background: var(--primary-color);
  color: #fff;
  font-size: 28rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  width: 100% !important;
}

/* Suggestions */
.tag-suggestions {
  background: #fff;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  margin-top: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.suggestion-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 26rpx;
  color: #666;
}

.tag-hint {
  font-size: 22rpx;
  color: #999;
  margin-top: 12rpx;
}
