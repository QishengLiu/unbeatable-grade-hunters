/* Login Page Styles */

.login-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  /* background: linear-gradient(135deg, var(--primary-light) 0%, #ffffff 100%); */
  position: relative;
  padding: 0;
}

.bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

/* Character illustration */
.illustration-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 350rpx;
  padding: 40rpx 0;
  background: transparent;
}

.character-image {
  width: 100%;
  height: 100%;
  max-width: 400rpx;
}

/* Form container */
.form-container {
  flex: 1;
  background: rgba(255, 255, 255, 0.85); /* Transparent background */
  backdrop-filter: blur(10px); /* Blur effect */
  border-radius: 40rpx 40rpx 0 0;
  padding: 60rpx 50rpx;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.05);
}

.header {
  display: flex;
  align-items: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  color: var(--text-main);
  position: relative;
}

.title::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 0;
  width: 40rpx;
  height: 6rpx;
  background-color: var(--primary-color);
  border-radius: var(--radius-full);
}

/* Input fields */
.input-field {
  width: 100%;
  height: 100rpx;
  background-color: var(--bg-color);
  border: 2rpx solid transparent;
  border-radius: var(--radius-md);
  padding: 0 32rpx;
  margin-bottom: 32rpx;
  font-size: 30rpx;
  color: var(--text-main);
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: var(--primary-color);
  background-color: #fff;
}

.placeholder-text {
  color: var(--text-placeholder);
}

.password-input-wrapper {
  position: relative;
  width: 100%;
}

.password-input {
  padding-right: 80rpx;
}

.password-toggle {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 10;
  padding: 10rpx;
  color: var(--text-secondary);
}

/* Forgot password */
.forgot-password {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 48rpx;
}

.forgot-password text {
  font-size: 26rpx;
  color: var(--primary-color);
}

/* Login button */
.login-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
  color: #fff;
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(74, 144, 226, 0.3);
  margin-bottom: 40rpx;
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: none;
}

/* Sign up link */
.signup-link {
  display: flex;
  justify-content: center;
  margin-bottom: 80rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
}

.signup-text {
  color: var(--primary-color);
  font-weight: 500;
  margin-left: 10rpx;
}

/* Other methods */
.other-methods {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.methods-title {
  font-size: 24rpx;
  color: var(--text-placeholder);
  margin-bottom: 32rpx;
  position: relative;
}

.methods-title::before,
.methods-title::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 60rpx;
  height: 2rpx;
  background-color: var(--border-color);
}

.methods-title::before {
  right: 100%;
  margin-right: 20rpx;
}

.methods-title::after {
  left: 100%;
  margin-left: 20rpx;
}

.social-icons {
  display: flex;
  justify-content: center;
  gap: 48rpx;
}

.social-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-md);
  font-size: 40rpx;
  transition: all 0.3s ease;
  border: 1px solid var(--border-color);
}

.social-icon:active {
  transform: scale(0.95);
  box-shadow: var(--shadow-sm);
}
