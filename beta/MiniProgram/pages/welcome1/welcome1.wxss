.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(180deg, var(--primary-light) 0%, #ffffff 100%);
  padding: 0;
}

/* 插画区域 */
.illustration-section {
  flex: 1.5;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  min-height: 400rpx;
}

.illustration {
  width: 100%;
  max-width: 500rpx;
  height: auto;
}

/* 导航指示器 */
.pagination {
  display: flex;
  justify-content: center;
  gap: 12rpx;
  margin-bottom: 40rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background: var(--text-placeholder);
  border-radius: 50%;
  transition: background 0.3s ease;
}

.dot.active {
  background: var(--primary-color);
}

/* 内容区域 */
.content-section {
  flex: 1;
  padding: 0 40rpx 40rpx 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.welcome-title {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-main);
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.brand {
  display: block;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.welcome-description {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: 60rpx;
}

.feature-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.feature-item {
  display: flex;
  background: var(--card-bg);
  border-radius: var(--radius-md);
  padding: 24rpx;
  box-shadow: var(--shadow-md);
  align-items: flex-start;
  gap: 24rpx;
}

.feature-icon {
  font-size: 36rpx;
  line-height: 1;
}

.feature-info {
  flex: 1;
}

.feature-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1e3a8a;
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 26rpx;
  color: #607d8b;
  line-height: 1.5;
}

/* 按钮部分 */
.button-section {
  padding: 0 40rpx 60rpx 40rpx;
}

.continue-btn {
  width: 100%;
  height: 88rpx;
  background: #1e88e5 !important;
  color: white !important;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.continue-btn::after {
  display: none;
}
