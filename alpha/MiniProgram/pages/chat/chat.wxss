/* pages/chat/chat.wxss */
.chat-container {
  width: 100%;
  height: 100vh;
  background-color: #f7f8fd;
  display: flex;
  flex-direction: column;
  padding-top: 0; /* 移除顶部导航栏空间 */
  box-sizing: border-box;
}

/* 移除顶部导航栏样式 */

/* 聊天内容区域 */
.chat-messages {
  flex: 1;
  padding: 16px;
  overflow-y: scroll;
  margin-right: 0;
  width: 100%;
  box-sizing: border-box;
}

.message-list {
  display: flex;
  flex-direction: column;
  gap: 16px;
  align-items: flex-start;
}

.message-item-mine {
  align-self: flex-end;
}

/* 修复对话框不被右侧遮挡 */
.message-item {
  padding-right: 12px;
  width: 100%;
  box-sizing: border-box;
}

.message-item-mine {
  padding-left: 12px;
  padding-right: 0;
}

/* 消息项 */
.message-item {
  display: flex;
  align-items: flex-end;
  gap: 12px;
}

.message-item-mine {
  flex-direction: row-reverse;
}

/* 头像 */
.avatar-other,
.avatar-mine {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  flex-shrink: 0;
  border: 1px solid #e0e0e0;
  background-color: #ffffff;
}

/* 消息气泡 */
.message-bubble-other,
.message-bubble-mine {
  max-width: 70%;
  padding: 10px 14px;
  border-radius: 12px;
  word-wrap: break-word;
  word-break: break-all;
  box-sizing: border-box;
  transform: translateX(0); /* 确保没有额外的位移 */
  position: relative;
}

.message-bubble-other {
  background-color: #ffffff;
  border: 1px solid #e0e0e0;
  border-bottom-left-radius: 4px;
  margin-right: 0;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 1;
}

.message-bubble-mine {
  background-color: rgba(0, 111, 253, 1);
  border-bottom-right-radius: 4px;
  margin-left: 0;
}

.message-text {
  font-size: 15px;
  line-height: 1.4;
  word-break: break-word;
}

.message-bubble-other .message-text {
  color: #000000;
  font-weight: 500;
  letter-spacing: 0.3px;
}

.message-bubble-mine .message-text {
  color: #ffffff;
  font-weight: 500;
}

/* 输入区域 */
.input-area {
  background-color: #ffffff;
  padding: 8px 16px;
  display: flex;
  align-items: center;
  gap: 12px;
  border-top: 1px solid #e0e0e0;
  box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(8px);
}

.input-left {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 8px;
}

.plus-button {
  width: 36px;
  height: 36px;
  background-color: #f5f5f5;
  border-radius: 18px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  color: #333333;
  margin-right: 8px;
  flex-shrink: 0;
  border: 1px solid #e0e0e0;
}

.chat-input {
  flex: 1;
  height: 36px;
  background-color: #f5f5f5;
  border-radius: 18px;
  padding: 0 16px;
  font-size: 15px;
  color: #000000;
  border: 1px solid transparent;
  outline: none;
}

.send-button {
  width: 36px;
  height: 36px;
  background-color: rgba(0, 111, 253, 1);
  border-radius: 18px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.send-icon {
  color: #ffffff;
  font-size: 16px;
  font-weight: bold;
}

/* 适配键盘弹出 */
.keyboard-up .input-area {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}

/* 滚动条样式 */
.chat-messages::-webkit-scrollbar {
  width: 4px;
}

.chat-messages::-webkit-scrollbar-track {
  background: transparent;
}

.chat-messages::-webkit-scrollbar-thumb {
  background: rgba(0, 0, 0, 0.1);
  border-radius: 2px;
}

.chat-messages::-webkit-scrollbar-thumb:hover {
  background: rgba(0, 0, 0, 0.2);
}