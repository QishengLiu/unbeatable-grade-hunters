/* 占位符样式 */
.map-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f0f0f0;
  color: #666;
  font-size: 14px;
  border-radius: 4px;
}

.character-placeholder {
  width: 80px;
  height: 80px;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
  font-size: 14px;
  border-radius: 8px;
}

.publisher-avatar-placeholder {
  width: 40px;
  height: 40px;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
  font-size: 12px;
  border-radius: 50%;
  margin-right: 12px;
}

/* 确保页面容器可见 */
.package-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  visibility: visible;
  opacity: 1;
}

/* 其他现有样式保持不变 */
/* 顶部返回栏 */
.package-header {
  display: flex;
  align-items: center;
  padding: 12px 16px;
  background-color: #fff;
  gap: 12px;
  border-bottom: 1px solid #eee;
}

.back-button {
  font-size: 20px;
  color: #1e88e5;
  padding: 4px;
}

.header-title {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.date {
  font-size: 12px;
  color: #999;
}

.help-count {
  font-size: 12px;
  color: #999;
}

/* 地图区域 */
.map-section {
  height: 200px;
  background-color: #e8eef7;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  margin: 12px;
  border-radius: 8px;
}

/* 角色展示 */
.character-section {
  position: relative;
  height: 120px;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12px;
}

.character-dots {
  display: flex;
  gap: 6px;
  justify-content: center;
  margin-top: 8px;
  position: absolute;
  bottom: 12px;
}

.dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background-color: #d0d0d0;
}

.dot.active {
  background-color: #1e88e5;
}

/* 详情区域 */
.detail-section {
  background-color: #fff;
  padding: 16px;
  border-radius: 8px;
  margin: 0 12px 20px;
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
  padding-bottom: 12px;
  border-bottom: 1px solid #eee;
}

.detail-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.detail-price {
  font-size: 16px;
  font-weight: bold;
  color: #ff6b6b;
}

/* 备注 */
.note-section {
  margin-bottom: 16px;
}

.note-label {
  display: block;
  font-size: 14px;
  color: #666;
  margin-bottom: 6px;
}

.note-content {
  font-size: 14px;
  color: #333;
  line-height: 1.6;
}

/* 发布者信息 */
.publisher-section {
  margin-bottom: 20px;
}

.publisher-label {
  display: block;
  font-size: 14px;
  color: #666;
  margin-bottom: 6px;
}

.publisher-info {
  display: flex;
  align-items: center;
}

.publisher-details {
  flex: 1;
}

.publisher-name {
  display: block;
  font-size: 14px;
  font-weight: bold;
  color: #333;
  margin-bottom: 4px;
}

.publisher-tag {
  display: flex;
  align-items: center;
  gap: 4px;
}

.star-icon {
  font-size: 12px;
}

.star-text {
  font-size: 12px;
  color: #999;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 12px;
}

.detail-button {
  flex: 1;
  background-color: #f0f0f0;
  color: #666;
  font-size: 14px;
  padding: 10px;
  text-align: center;
  border-radius: 6px;
}

.accept-button {
  flex: 2;
  background-color: #1e88e5;
  color: white;
  font-size: 14px;
  padding: 10px;
  text-align: center;
  border-radius: 6px;
  font-weight: bold;
}