page {
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
}

.forget-page {
  padding: 120rpx 40rpx 120rpx;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  color: #111111;
  position: relative;
}

.page-header {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  align-items: center;
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1e88e5;
  letter-spacing: 2rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.page-desc {
  font-size: 28rpx;
  color: #666666;
  text-align: center;
  line-height: 40rpx;
}

.card {
  background: rgba(255, 255, 255, 0.95);
  border: none;
  border-radius: 28rpx;
  padding: 48rpx;
  display: flex;
  flex-direction: column;
  gap: 36rpx;
  box-shadow: 0 12rpx 36rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(10rpx);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.12);
}

.field {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  transition: all 0.3s ease;
}

.field:focus-within {
  transform: translateX(4rpx);
}

.field-label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  transition: color 0.3s ease;
}

.field:focus-within .field-label {
  color: #1e88e5;
}

.field-input {
  height: 96rpx;
  border-radius: 20rpx;
  border: 2rpx solid #e0e0e0;
  padding: 0 28rpx;
  font-size: 32rpx;
  background: #ffffff;
  color: #111111;
  text-align: center;
  transition: all 0.3s ease;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.field-input:focus {
  border-color: #1e88e5;
  background: #ffffff;
  box-shadow: inset 0 2rpx 8rpx rgba(30, 136, 229, 0.1);
  transform: scale(1.01);
}

.placeholder {
  color: #999999;
}

.code-row {
  display: flex;
  gap: 24rpx;
  align-items: center;
}

.code-input {
  flex: 1;
}

.code-btn {
  width: 240rpx;
  height: 96rpx;
  border-radius: 20rpx;
  border: none;
  background: linear-gradient(135deg, #1e88e5 0%, #1565c0 100%);
  color: #ffffff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 6rpx 18rpx rgba(30, 136, 229, 0.3);
}

.code-btn:hover:not([disabled]) {
  background: linear-gradient(135deg, #1976d2 0%, #0d47a1 100%);
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(30, 136, 229, 0.4);
}

.code-btn:active:not([disabled]) {
  transform: translateY(0);
}

.code-btn[disabled] {
  background: #e0e0e0;
  box-shadow: none;
  color: #9e9e9e;
}

.primary-btn {
  width: 100%;
  height: 100rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #1e88e5 0%, #1565c0 100%);
  color: #ffffff;
  font-size: 36rpx;
  font-weight: 600;
  border: none;
  margin-top: 20rpx;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 24rpx rgba(30, 136, 229, 0.3);
  letter-spacing: 4rpx;
}

.primary-btn:hover {
  background: linear-gradient(135deg, #1976d2 0%, #0d47a1 100%);
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 36rpx rgba(30, 136, 229, 0.4);
}

.primary-btn:active {
  transform: translateY(0);
}

.helper-text {
  text-align: center;
  font-size: 28rpx;
  color: #666666;
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.link {
  color: #1e88e5;
  font-weight: 500;
  position: relative;
  transition: color 0.3s ease;
}

.link::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: -2rpx;
  width: 0;
  height: 2rpx;
  background: #1e88e5;
  transition: width 0.3s ease;
}

.link:hover {
  color: #1565c0;
}

.link:hover::after {
  width: 100%;
}

/* 添加一些动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.forget-page {
  animation: fadeIn 0.6s ease-out;
}

.card {
  animation: fadeIn 0.8s ease-out;
  animation-delay: 0.2s;
  animation-fill-mode: both;
}