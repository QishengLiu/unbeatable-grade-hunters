page {
  background: #ffffff;
  font-family: "Inter", "PingFang SC", sans-serif;
}

.replies-page {
  min-height: 100vh;
}

.status-bar {
  padding: 10px 20px 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #000;
  font-size: 12px;
}

.status-icons,
.signal {
  display: flex;
  align-items: center;
}

.signal-bar {
  width: 3px;
  border-radius: 1px;
  background: #1f2024;
  margin-right: 2px;
}

.bar-1 {
  height: 3px;
}

.bar-2 {
  height: 5px;
}

.bar-3 {
  height: 7px;
}

.bar-4 {
  height: 9px;
}

.battery {
  display: flex;
  align-items: center;
  margin-left: 6px;
}

.battery-body {
  width: 16px;
  height: 8px;
  border: 1px solid #1f2024;
  border-radius: 2px;
}

.battery-head {
  width: 3px;
  height: 4px;
  background: #1f2024;
  border-radius: 1px;
  margin-left: 2px;
}

/* 顶部导航栏样式 */
.top-bar {
  padding: 12px 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #f0f1f4;
}

.nav-left {
  display: flex;
  align-items: center;
  gap: 8px;
}

.bar-back {
  width: 20px;
  height: 20px;
}

.nav-left text {
  font-size: 14px;
  color: #1f2024;
}

.top-title {
  font-size: 16px;
  font-weight: 600;
  color: #1f2024;
}

.replies-scroll {
  height: calc(100vh - 120px);
  padding: 0 20px 16px;
}

/* 被回复的评论 */
.parent-comment {
  padding: 20px 0;
  border-bottom: 8px solid #f6f7fb;
}

/* 回复列表 */
.replies-section {
  padding-top: 20px;
}

.replies-header {
  margin-bottom: 16px;
}

.replies-count {
  font-size: 16px;
  font-weight: 600;
  color: #1f2024;
}

.comment-item {
  display: flex;
  gap: 12px;
  padding: 16px 0;
  border-bottom: 1px solid #f5f6f8;
}

.comment-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}

.comment-main {
  flex: 1;
}

.comment-head {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 6px;
}

.comment-name {
  font-size: 15px;
  font-weight: 600;
  color: #1f2024;
}

.comment-time {
  font-size: 12px;
  color: #a0a2a8;
}

.comment-text {
  margin: 8px 0;
  font-size: 15px;
  color: #1f2024;
  line-height: 1.5;
}

.comment-actions {
  display: flex;
  gap: 20px;
  color: #6f7686;
  font-size: 13px;
  margin-top: 8px;
}

.comment-action {
  display: flex;
  align-items: center;
  gap: 4px;
}

.comment-icon {
  width: 16px;
  height: 16px;
}

.load-more, .no-more {
  text-align: center;
  padding: 16px;
  font-size: 14px;
  color: #999;
}